@if (ViewBag.Success != null)
{
    <script type="text/javascript">
        window.onload = function () {
            debugger;
            $('#divSuccessMessages').modal('show');
        };
    </script>
}

<script type="text/javascript">
     $(document).ready(function () {
        $("#Input_Email").val();
        $("#Input_Password").val();
    });

    $(function () {
        $("#btnLogin").click(function () {
            $("#divCheckMessage").empty();
        });

    });
</script>

