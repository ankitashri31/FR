            <div class="modal-header">
                Success
            </div>
            <div class="modal-body">
                @ViewBag.Message
            </div>

            <div class="modal-footer justify-content-right">
                <button type="button" class="btn btn-danger" titlt="Close" data-dismiss="modal">Close</button>
            </div>
