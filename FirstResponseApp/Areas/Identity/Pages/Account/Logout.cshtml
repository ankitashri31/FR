@page
@model LogoutModel
@using FirstResponseApp.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Log out";
}

    <div class="container" id="reset-form">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card card-form-sm">
                    <div class="card-header">@ViewData["Title"]</div>
                    <div class="card-body">
                        <div class="logout-content">
                            <div class="logout-icon"><i class="fas fa-sign-out-alt"></i></div>
                            <div class="logout-content">
                                You have successfully logged out of the application.
                            </div>
                        </div>
                        <div class="button-section"><a href="/" class="btn btn-primary"><i class="fas fa-home  icon-arrow-left7"></i> Back to Home</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>              